<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/PaddingXLarge" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/fragment_main_ads_group_buy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <FrameLayout 
            android:id="@+id/fragment_main_ads_group_buy_title_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.qianseit.westore.ui.CountDownView
            android:id="@+id/fragment_main_ads_group_buy_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_main_ads_group_buy_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/fragment_main_ads_group_buy_l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/fragment_main_ads_group_buy_l1_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#f83131" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/fragment_main_ads_group_buy_r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/fragment_main_ads_group_buy_r1_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#f83131" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_main_ads_group_buy_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/fragment_main_ads_group_buy_l2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/fragment_main_ads_group_buy_l2_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#f83131" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/fragment_main_ads_group_buy_r2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/fragment_main_ads_group_buy_r2_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#f83131" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>