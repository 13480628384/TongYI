<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_limit_time_buy_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_limit_timebuy_image"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:scaleType="centerCrop" />

    <com.qianseit.westore.ui.CommonTextView
        android:id="@+id/item_limit_timebuy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/item_limit_timebuy_yuanjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123"
                />
            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/item_limit_timebuy_nowprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f83131"
                android:textSize="14sp"
                android:text="123"
                />
        </LinearLayout>
        
        <ImageView 
            android:id="@+id/item_limit_timebuy_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/tabbar_logo4_norm"/>
        
    </RelativeLayout>

</LinearLayout>