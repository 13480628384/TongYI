<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/PaddingXLarge"
    android:paddingRight="@dimen/PaddingXLarge"
    android:paddingTop="@dimen/PaddingXLarge" >

    <ImageView
        android:id="@+id/goods_item_column_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/goods_item_column_status"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/goods_item_column_icon"
        android:layout_alignBottom="@+id/goods_item_column_icon"
        android:layout_marginLeft="-25dp"
        android:layout_marginBottom="@dimen/PaddingLarge"    
        />

    <com.qianseit.westore.ui.CommonTextView
        android:id="@+id/goods_item_column_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goods_item_column_icon"
        android:layout_marginLeft="@dimen/PaddingXXLarge"
        android:textSize="@dimen/TextSizeBigSmall"
        android:singleLine="true"
         android:ellipsize="end"  
         android:textColor="#333333"
        android:layout_toRightOf="@+id/goods_item_column_status"
        />
     <com.qianseit.westore.ui.CommonTextView 
         android:id="@+id/goods_item_column_explain"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="11sp"
         android:textColor="#666666"
         android:lines="2"
         android:ellipsize="end"  
         android:lineSpacingExtra="3dp"
         android:layout_marginTop="@dimen/PaddingLarge"
         android:layout_marginLeft="@dimen/PaddingXXLarge"
         android:layout_below="@+id/goods_item_column_title"
         android:layout_toRightOf="@+id/goods_item_column_status"
         />
    <TextView
        android:id="@+id/goods_item_column_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/goods_item_column_icon"
        android:layout_marginLeft="@dimen/PaddingXXLarge"
        android:layout_toRightOf="@+id/goods_item_column_status"
        android:textColor="@color/fragment_top_bg"
        android:textSize="@dimen/TextSizeBigSmall" />

</RelativeLayout>