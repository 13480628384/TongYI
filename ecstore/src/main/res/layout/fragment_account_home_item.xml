<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/account_home_item_head"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/PaddingLarge"
        android:background="#aaaaaa"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/PaddingLarge"
        android:paddingRight="@dimen/PaddingLarge" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/account_home_item_phone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/PaddingMedium"
                android:src="@drawable/phone_call"
                android:tint="@color/westore_color"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="46dip"
                android:layout_toLeftOf="@id/account_home_item_phone"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/me_item_orders" />

                <com.qianseit.westore.ui.CommonTextView
                    android:id="@android:id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/PaddingLarge"
                    android:text="@string/me_item_orders"
                    android:textColor="@color/westore_dark_textcolor"
                    android:textSize="@dimen/TextSizeLarge" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/account_home_item_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#aaaaaaaa" />
    </LinearLayout>

    <View
        android:id="@+id/account_home_item_tail"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="@dimen/PaddingLarge"
        android:background="#aaaaaa"
        android:visibility="gone" />

</LinearLayout>