<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/grand_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.qianseit.westore.ui.CircleImageView
            android:id="@+id/goods_detail_buy_thumb"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/PaddingXLarge"
            android:layout_marginTop="@dimen/PaddingXLarge"
            android:background="@drawable/icon_circle_bg_red_large"
            android:scaleType="centerCrop" />

        <com.qianseit.westore.ui.CommonTextView
            android:id="@+id/grand_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/PaddingLarge"
            android:paddingLeft="@dimen/PaddingLarge"
            android:paddingRight="@dimen/PaddingLarge"
            android:text="asdasjlkjkhjhjhkjlfhshdvsdjvdhjbfewdjschjcbds xjhsdcsbdscklsfgdbcaczjacahajb ijbcn s"
            android:textColor="#999999"
            android:textSize="@dimen/TextSizeSmall"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/westore_divider_bgcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical" >

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/tv_sales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableBottom="@drawable/icon_red_line_horizontal"
                android:drawableRight="@drawable/icon_red_line_vertical"
                android:gravity="center"
                android:text="销量"
                android:textColor="#f04641"
                android:textSize="@dimen/TextSizeBigSmall" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="@color/theme_color" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableBottom="@drawable/icon_red_line_horizontal"
                android:gravity="center"
                android:text="价格"
                android:textColor="#f04641"
                android:textSize="@dimen/TextSizeBigSmall" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/westore_divider_bgcolor" />
        
    </LinearLayout>
    
    <ListView 
        android:id="@+id/grand_detail_list"
        style="@style/listview"/>

</LinearLayout>