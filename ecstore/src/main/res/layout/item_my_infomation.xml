<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:minHeight="60dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        
        <com.qianseit.westore.ui.CircleImageView
            android:id="@+id/item_my_info_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/account_avatar"
            android:visibility="gone" />
        
        <com.qianseit.westore.ui.CommonTextView
            android:id="@+id/item_my_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/TextSizeBigSmall"
            android:textColor="#666666"
            android:text="昵称"
            android:visibility="gone"
            />
        
        <ImageView
            android:id="@+id/item_my_info_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/PaddingMedium"
            android:textColor="@color/text_textcolor_gray1"
            android:src="@drawable/account_add_right"
            />
        
       	<com.qianseit.westore.ui.CommonTextView
            android:id="@+id/item_my_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_my_info_arrow"
            android:layout_centerVertical="true"
            android:textSize="@dimen/TextSizeBigSmall"
            android:textColor="#333333"
            android:paddingLeft="5dp"
            android:text="修改头像"
            />
       	
       	<com.qianseit.westore.ui.CommonTextView
            android:id="@+id/item_my_info_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_my_info_title"
            android:layout_toLeftOf="@id/item_my_info_arrow"
            android:layout_marginLeft="@dimen/PaddingXLarge"
            android:layout_centerVertical="true"
            android:textSize="@dimen/TextSizeBigSmall"
            android:text="修改头像"
            android:textColor="@color/text_textcolor_gray1"
            android:visibility="gone"
            />
        
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/help_button_view"
        />
    
</LinearLayout>