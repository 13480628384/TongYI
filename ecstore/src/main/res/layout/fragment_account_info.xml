<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/invoice_bgimage"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/PaddingLarge" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_header_buttons_bgimage"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/account_info_passwd_item"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/PaddingLarge"
            android:paddingRight="@dimen/PaddingLarge" >

            <com.qianseit.westore.ui.CommonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="@string/account_info_reset_password"
                android:textColor="@color/westore_dark_textcolor"
                android:textSize="@dimen/TextSizeMedium" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/account_profile_nickname"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:gravity="right"
                android:inputType="none"
                android:paddingLeft="@dimen/PaddingLarge"
                android:paddingRight="@dimen/PaddingLarge"
                android:singleLine="true"
                android:textSize="@dimen/TextSizeSmall"
                android:tint="@color/westore_secondary_textcolor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_pink"
                android:tint="@color/westore_secondary_textcolor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@dimen/PaddingLarge"
            android:background="@color/account_login_thirdparty_line_bgcolor" />

        <LinearLayout
            android:id="@+id/account_info_phone_item"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/PaddingLarge"
            android:paddingRight="@dimen/PaddingLarge" >

            <com.qianseit.westore.ui.CommonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="@string/account_info_reset_phone"
                android:textColor="@color/westore_dark_textcolor"
                android:textSize="@dimen/TextSizeMedium" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/account_info_phone"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:gravity="right"
                android:inputType="none"
                android:paddingLeft="@dimen/PaddingLarge"
                android:paddingRight="@dimen/PaddingLarge"
                android:singleLine="true"
                android:textSize="@dimen/TextSizeSmall"
                android:tint="@color/westore_secondary_textcolor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_pink"
                android:tint="@color/westore_secondary_textcolor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@dimen/PaddingLarge"
            android:background="@color/account_login_thirdparty_line_bgcolor" />

        <LinearLayout
            android:id="@+id/account_info_email_item"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/PaddingLarge"
            android:paddingRight="@dimen/PaddingLarge" >

            <com.qianseit.westore.ui.CommonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="@string/account_info_reset_email"
                android:textColor="@color/westore_dark_textcolor"
                android:textSize="@dimen/TextSizeMedium" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/account_info_email"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:gravity="right"
                android:inputType="none"
                android:paddingLeft="@dimen/PaddingLarge"
                android:paddingRight="@dimen/PaddingLarge"
                android:singleLine="true"
                android:textSize="@dimen/TextSizeSmall"
                android:tint="@color/westore_secondary_textcolor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_pink"
                android:tint="@color/westore_secondary_textcolor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>