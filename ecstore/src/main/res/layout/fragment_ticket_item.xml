<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/PaddingLarge" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/PaddingMedium" >

        <LinearLayout
            android:layout_width="86dip"
            android:layout_height="86dip"
            android:background="@drawable/counpon_money_bgimage"
            android:gravity="center"
            android:padding="@dimen/PaddingMedium" >

            <com.qianseit.westore.ui.CommonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/PaddingMedium"
                android:textColor="@color/westore_secondary_textcolor"
                android:textSize="@dimen/TextSizeMedium" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/ticket_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/westore_secondary_textcolor"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dip"
            android:orientation="vertical"
            android:padding="@dimen/PaddingMedium"
            android:paddingLeft="@dimen/PaddingMedium" >

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/ticket_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/about_us"
                android:textColor="@color/westore_secondary_textcolor"
                android:textSize="@dimen/TextSizeMedium" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/ticket_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/PaddingSmall"
                android:singleLine="true"
                android:text="@string/about_us"
                android:textColor="@color/westore_secondary_textcolor"
                android:textSize="@dimen/TextSizeBigSmall" />

            <com.qianseit.westore.ui.CommonTextView
                android:id="@+id/ticket_item_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textColor="@color/westore_secondary_textcolor"
                android:textSize="@dimen/TextSizeBigSmall" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket_item_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0efed"
        android:padding="@dimen/PaddingMedium" >

        <com.qianseit.westore.ui.CommonTextView
            android:id="@+id/ticket_item_valid_period"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/counpon_state"
            android:drawablePadding="5dp"
            android:textColor="@color/westore_secondary_textcolor"
            android:textSize="@dimen/TextSizeMedium" />

        <com.qianseit.westore.ui.CommonTextView
            android:id="@+id/ticket_item_state"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/westore_secondary_textcolor"
            android:textSize="@dimen/TextSizeMedium" />
    </LinearLayout>

</LinearLayout>